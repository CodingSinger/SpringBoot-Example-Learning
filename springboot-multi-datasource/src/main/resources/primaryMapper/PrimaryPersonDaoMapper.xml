<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.zzc.test.springbootmultidatasource.dao.primary.PrimaryMapper">
    <resultMap id="BaseResultMap" type="Person">
        <result column="id" property="id" />
        <result column="name" property="name" />
    </resultMap>


    <select id="queryById" resultMap="BaseResultMap" parameterType="map">
        select id,name
        from person
        where id = #{id}
    </select>
    <insert id="add" parameterType="Person">
        insert into person
        (name)
        values(#{name})

    </insert>
</mapper>